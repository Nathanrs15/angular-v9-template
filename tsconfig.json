{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@services/*":  ["app/core/services/*"],
      "@interceptors/*":  ["app/core/interceptors/*"],
      "@guards/*":  ["app/core/guards/*"],
      "@coreModule":  ["app/core/core.module"],
      "@materialModule":  ["app/core/material.module"],
      "@features/*":  ["app/features/*"],
      "@sharedcomponents/*":  ["app/shared/components/*"],
      "@shareddirectives/*":  ["app/shared/directives/*"],
      "@sharedmodels/*":  ["app/shared/models/*"],
      "@sharedmodules/*":  ["app/shared/modules/*"],
      "@sharedpipes/*":  ["app/shared/pipes/*"]

    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
